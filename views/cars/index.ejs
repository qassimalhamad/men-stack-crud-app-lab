<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Car List</title>
</head>
<body>

    <h1>Welcome to Cars Showroom</h1>
    <!-- <a href="/cars"> BROWSE CAR </a>     -->
    <a href="/cars/new"> ADD NEW CAR </a>    

    <ul>
       <% cars.forEach(car => { %>
           <li>
               <a href="/cars/<%= car._id %>"><%= car.name %></a>
               - <%= car.price %>
           </li>
       <% }) %>
    </ul>
    <a href="/"> Back </a>  
</body>
</html>
